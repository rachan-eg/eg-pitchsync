# Pitch-Sync Engine - Environment Configuration Example
# Copy this file to .env and fill in the values

# --- PRODUCTION DEPLOYMENT TUNING (Detailed for t2.large) ---
# Number of Gunicorn workers (Recommended for t2.large: 3)
WORKERS=3
# Request timeout in seconds (Recommended: 180 for AI tasks)
GUNICORN_TIMEOUT=180
# Limit numeric library threads (Recommended: 1)
OMP_NUM_THREADS=1

# --- Keycloak SSO Settings (Required for Production Auth) ---
KEYCLOAK_SERVER_URL=https://your-auth-server.com
KEYCLOAK_REALM=YourRealm
KEYCLOAK_CLIENT_ID=pitchsync
KEYCLOAK_CLIENT_SECRET=your_client_secret_here

# --- Forbidden Secrets (Set these!) ---
ADMIN_TOKEN_SECRET=CHANGE_THIS_TO_RANDOM_STRING

# --- Frontend Settings ---
VITE_KEYCLOAK_URL=https://your-auth-server.com
VITE_KEYCLOAK_REALM=YourRealm
VITE_KEYCLOAK_CLIENT_ID=pitchsync

# --- Application Mode ---
DEBUG=false
TEST_MODE=false
VITE_ALLOW_BYPASS=false

# --- AWS Configuration (Optional on EC2 if using IAM Roles) ---
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN=
AWS_REGION=eu-central-1

# --- Flux API (Required for Image Generation) ---
FLUX_API_KEY=your_flux_key_here
FLUX_ENDPOINT=https://api.flux.ai/v1/generate
