# Pitch-Sync Engine - Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# AWS Bedrock Credentials (Required for AI Evaluation)
# =============================================================================
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_SESSION_TOKEN=your_session_token_if_any
AWS_REGION=eu-central-1

# =============================================================================
# Azure AI Studio / Flux Image Generation (Required for Image Gen)
# =============================================================================
FLUX_API_KEY=your_flux_api_key
FLUX_ENDPOINT=https://ideation-game.services.ai.azure.com/providers/blackforestlabs/v1/flux-2-pro?api-version=preview
FLUX_DEPLOYMENT_NAME=FLUX.2-pro

# =============================================================================
# Application Settings
# =============================================================================
# Enable debug mode (logs AI responses, skips credential validation)
DEBUG=false

# Enable test mode (allows "test" bypass in submissions, skips credential validation)
TEST_MODE=true

# Allow proceeding even on phase failure (for demo purposes)
ALLOW_FAIL_PROCEED=true

# =============================================================================
# CORS Configuration (comma-separated origins)
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:8000,http://127.0.0.1:5173

# =============================================================================
# Docker-specific (usually don't need to change)
# =============================================================================
# GENERATED_DIR=/app/generated
# DATABASE_URL=sqlite:////app/data/gum_app.db
